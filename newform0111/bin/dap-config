#! /bin/sh
#
# Borrowed the idea for this script (and some code) from libcurl.
#
prefix=/Users/plewis/Documents/GitHub/newform0111/newform0111
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
libdir64=${exec_prefix}/lib64
includedir=${prefix}/include

usage()
{
    cat <<EOF
Usage: dap-config [OPTION]

Available values for OPTION include:

  --help      	display this help message and exit
  --cc        	C compiler
  --cxx       	C++ compiler
  --cflags    	pre-processor and compiler flags
  --libs      	library linking information for libdap (both clients and servers)
  --server-libs libraries for servers
  --client-libs libraries for clients
  --prefix    	OPeNDAP install prefix
  --version   	Library version
EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

while test $# -gt 0; do
    case "$1" in
    # this deals with options in the style
    # --option=value and extracts the value part
    # [not currently used]
    -*=*) value=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) value= ;;
    esac

    case "$1" in
    --help)
	usage 0
	;;

    --cc)
	echo "x86_64-apple-darwin13.4.0-clang"
	;;

    --cxx)
	echo "x86_64-apple-darwin13.4.0-clang++"
	;;

    --cflags)
	echo "-I${includedir}/libdap -I/Users/plewis/Documents/GitHub/newform0111/newform0111/include/libxml2 -I/Users/plewis/Documents/GitHub/newform0111/newform0111/include -I/Users/plewis/Documents/GitHub/newform0111/newform0111/include"
	;;

    --libs)
       	echo "-L${libdir64} -L${libdir} -ldap -ldapserver -ldapclient -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -lcurl -lssh2 -lssh2 -lssl -lcrypto -lssl -lcrypto -lgssapi_krb5 -lresolv -lz -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -lxml2 -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -lz -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -llzma -lpthread -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -liconv -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -licui18n -licuuc -licudata -lm -lpthread  "
        ;;
#
#   Changed CURL_STATIC_LIBS to CURL_LIBS because the former was including a
#   a boatload of crypto stuff that might or might not be present on a server.
#   Various handlers use this script to determine which libraries to link with.
#   jhrg 2/7/12

    --server-libs)
       	echo "-L${libdir64} -L${libdir} -ldap -ldapserver -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -lxml2 -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -lz -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -llzma -lpthread -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -liconv -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -licui18n -licuuc -licudata -lm -lpthread  "
       	;;

    --client-libs)
       	echo "-L${libdir64} -L${libdir} -ldap -ldapclient -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -lcurl -lssh2 -lssh2 -lssl -lcrypto -lssl -lcrypto -lgssapi_krb5 -lresolv -lz -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -lxml2 -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -lz -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -llzma -lpthread -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -liconv -L/Users/plewis/Documents/GitHub/newform0111/newform0111/lib -licui18n -licuuc -licudata -lm -lpthread  "
       	;;

    --prefix)
       	echo "${prefix}"
       	;;

    --version)
	echo "libdap 3.20.6"
	;;

    *)
        echo "unknown option: $1"
	usage
	exit 1
	;;
    esac
    shift
done

exit 0
